<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="msi_page.example.class">Msi\Bundle\PageBundle\Example</parameter>
    </parameters>
    -->
    <services>
        <!-- Page Manager -->
        <service id="msi_page.page_manager" class="Msi\Bundle\AdminBundle\Entity\ModelManager">
            <argument type="service" id="msi_admin.entity_manager" />
            <argument>Msi\Bundle\PageBundle\Entity\Page</argument>
        </service>
        <!-- Page Admin -->
        <service id="msi_page_page_admin" parent="msi_admin.admin" class="Msi\Bundle\PageBundle\Admin\PageAdmin">
            <argument />
            <argument>MsiPageBundle</argument>
            <call method="setChild">
                <argument type="service" id="msi_page_block_admin" />
            </call>
            <call method="setModelManager">
                <argument type="service" id="msi_page.page_manager" />
            </call>
            <tag name="msi.admin"></tag>
        </service>
        <!-- Block Manager -->
        <service id="msi_page.block_manager" class="Msi\Bundle\AdminBundle\Entity\ModelManager">
            <argument type="service" id="msi_admin.entity_manager" />
            <argument>Msi\Bundle\PageBundle\Entity\Block</argument>
        </service>
        <!-- Block Admin -->
        <service id="msi_page_block_admin" parent="msi_admin.admin" class="Msi\Bundle\PageBundle\Admin\BlockAdmin">
            <argument />
            <argument>MsiPageBundle</argument>
            <call method="setParent">
                <argument type="service" id="msi_page_page_admin" />
            </call>
            <call method="setModelManager">
                <argument type="service" id="msi_page.block_manager" />
            </call>
            <tag name="msi.admin"></tag>
        </service>
    </services>
</container>
