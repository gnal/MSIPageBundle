{% extends '::base.html.twig' %}

{% block title %}{{ page.title }}{% endblock title %}

{% block body %}
<div class="container">
    <div class="hero-unit">
        <h1>{{ page.title }}</h1>
    </div>
    <div class="row">
        <div class="span4">
            <div class="well">
                {{ msi_block_render_block('content_left', page) }}
            </div>
        </div>
        <div class="span4">
            <div class="well">
                {{ msi_block_render_block('content_center', page) }}
            </div>
        </div>
        <div class="span4">
            <div class="well">
                {{ msi_block_render_block('content_right', page) }}
            </div>
        </div>
    </div>
</div>
{% endblock body %}

{% block css %}
<link rel="stylesheet" href="{{ asset('/vendor/bootstrap/css/bootstrap.min.css') }}">
{% endblock %}

{% block js %}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="{{ asset('/vendor/bootstrap/js/bootstrap.min.js') }}"></script>
{% endblock %}
